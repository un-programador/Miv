{
  "manifest_version": 2,
  "name": "MiniVim",
  "version": "1.3",

  "description": "A couple of vim like shortcuts for Firefox.",

  "icons": {
    "48": "icons/bgcolor-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mini_vim.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "minivim@mathiashh.dk"
    }
  }
}


